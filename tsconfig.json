{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ]
}
